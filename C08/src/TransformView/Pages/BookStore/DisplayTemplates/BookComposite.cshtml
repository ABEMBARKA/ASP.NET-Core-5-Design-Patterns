@using Microsoft.AspNetCore.Html
@model BookComposite

<li class="list-group-item">
    <section class="card">
        @OpenHeading()
        @Model.Name
        <span class="badge badge-secondary float-right">@Model.Count()</span>
        @CloseHeading()

        <ul class="list-group list-group-flush">
            @Html.DisplayFor(x => x.Components)
        </ul>

        <div class="card-footer text-muted">
            <small class="text-muted text-right">@Model.Type</small>
        </div>
    </section>
</li>

@functions{
    HtmlString OpenHeading() => new HtmlString($"<{Model.HeadingTagName} class=\"card-header\">");
    HtmlString CloseHeading() => new HtmlString($"</{Model.HeadingTagName}>");
}